<!DOCTYPE html>
<html lang="en" data-theme="light">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Country - Global Nations</title>
    <link href="https://cdn.jsdelivr.net/npm/daisyui@4.4.19/dist/full.min.css" rel="stylesheet" type="text/css" />
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
    <!-- Navbar -->
    <div class="navbar bg-base-100">
        <div class="flex-1">
            <a href="/" class="btn btn-ghost text-xl">Global Nations</a>
        </div>
        <div class="flex-none">
            <ul class="menu menu-horizontal px-1">
                <li><a href="/">Featured Countries</a></li>
                <li><a href="/about">About</a></li>
                <li><a href="/addCountry" class="active">Add to Collection</a></li>
            </ul>
        </div>
    </div>

    <main class="container mx-auto px-4 py-8">
        <h1 class="text-4xl font-bold text-center mb-8">Add New Country</h1>

        <form action="/addCountry" method="POST" class="max-w-2xl mx-auto space-y-4">
            <div class="form-control">
                <label class="label">
                    <span class="label-text">Common Name</span>
                </label>
                <input type="text" name="commonName" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Official Name</span>
                </label>
                <input type="text" name="officialName" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Native Name</span>
                </label>
                <input type="text" name="nativeName" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">ISO Numeric-3 Code (ID)</span>
                </label>
                <input type="text" name="id" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Capital</span>
                </label>
                <input type="text" name="capital" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Languages</span>
                </label>
                <input type="text" name="languages" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Population</span>
                </label>
                <input type="number" name="population" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Area (km²)</span>
                </label>
                <input type="number" name="area" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Currencies</span>
                </label>
                <input type="text" name="currencies" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Sub Region</span>
                </label>
                <select name="subRegionId" class="select select-bordered" required>
                    <option value="">Select a Sub Region</option>
                    <% subRegions.forEach(subRegion => { %>
                        <option value="<%= subRegion.id %>">
                            <%= subRegion.subRegion %>
                        </option>
                    <% }); %>
                </select>
            </div>

            <div class="form-control">
                <label class="label cursor-pointer">
                    <span class="label-text">Landlocked</span>
                    <input type="checkbox" name="landlocked" class="checkbox">
                </label>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">OpenStreetMaps URL</span>
                </label>
                <input type="text" name="openStreetMaps" class="input input-bordered">
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Flag Emoji</span>
                </label>
                <input type="text" name="flag" class="input input-bordered" required>
            </div>

            <div class="form-control">
                <label class="label">
                    <span class="label-text">Coat of Arms URL</span>
                </label>
                <input type="text" name="coatOfArms" class="input input-bordered" required>
            </div>

            <div class="form-control mt-6">
                <button type="submit" class="btn btn-primary">Add Country</button>
            </div>
        </form>
    </main>

    <!-- Footer -->
    <footer class="footer footer-center p-10 bg-base-200 text-base-content rounded">
        <nav class="grid grid-flow-col gap-4">
            <a href="/about">About</a>
        </nav> 
        <aside>
            <p>Copyright © 2024 - All right reserved</p>
        </aside>
    </footer>
</body>
</html>